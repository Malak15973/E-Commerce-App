@model LoginVM 
@{
    ViewBag.Title = "Login";
}

<div class="container" style="padding-top: 200px;">
    <div class="row">
        <div class="col-md-6 create-product-form">
            <form asp-controller="Account" asp-action="Login" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="text" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>

                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>

                <div style="margin: 20px;" class="text-center">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a asp-controller="Account" asp-action="Register" class="text-success ">Create Account?</a>
                    <a asp-controller="Account" asp-action="ForgetPassword" class="text-danger">Forget Password?</a><br>
                </div>
                <input asp-for="RememberMe" type="checkbox" />
                <label asp-for="RememberMe">Remember Me?</label>
            </form>
        </div>
    </div>
</div>
